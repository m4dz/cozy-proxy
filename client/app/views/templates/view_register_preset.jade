label.with-input(for="preset-email", aria-describedby="preset-email-tip")
    span= t('preset email')
    input#preset-email(type="email", name="email" autofocus=true, required=true)
    span.indicator
        span.fa.fa-exclamation-triangle
p#preset-email-tip.tips
    = t('preset email tip')


label.with-input(for="preset-name", aria-describedby="preset-name-tip")
    span= t('preset name')
    input#preset-name(type="text", name="public_name", required=true)
p#preset-name-tip.tips
    = t('preset name tip')


label.with-input(for="preset-password", aria-describedby="preset-password-tip")
    span= t('preset password')
    input#preset-password(type="password", name="password", required=true)
    span.indicator
        span.fa.fa-exclamation-triangle
p#preset-password-tip.tips
    = t('preset password tip')


.checkboxes
    label.checkbox(for="preset-authkeys", aria-describedby="preset-authkeys-tip")
        input#preset-authkeys(type="checkbox", name="autkeys", checked=this.crypto.subtle? 'true' : 'false', disabled=!this.crypto.subtle)
        span= t('preset authkeys')
        input#preset-authkeys-pubkey(type="hidden", name="pubkey")
    p#preset-authkeys-tip.tips
        = t('preset authkeys tip')


label.with-input(for="preset-timezone", aria-describedby="preset-timezone-tip")
    span= t('preset timezone')
    input#preset-timezone(type="text", name="timezone", list="preset-timezone-datalist", required=true)
    datalist#preset-timezone-datalist
        each timezone in timezones
            option(value=timezone)
    span.indicator
        span.fa.fa-exclamation-triangle
p#preset-timezone-tip.tips
    = t('preset timezone tip')


.checkboxes
    label.checkbox(for="preset-help-us")
        input#preset-help-us(type="checkbox", name="allow_stats", checked=true)
        span= t('preset opt-in help')


button(type="submit", aria-hidden="true")
